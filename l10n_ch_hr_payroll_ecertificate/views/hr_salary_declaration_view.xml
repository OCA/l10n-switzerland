<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_salary_declaration_tree_view">
        <field name="name">hr.salary_declaration.sd</field>
        <field name="model">hr.salary_declaration</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree string="Generated Salary declaration">
                <field name="year"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="grossincome" sum="grossincome"/>
            </tree>
        </field>
    </record>

        <!-- Actions -->
    <record id="open_view_sd_tree" model="ir.actions.act_window">
        <field name="name">Salary Declaration</field>
        <field name="res_model">hr.salary_declaration</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <menuitem id="menu_report"
              name="Salary declaration"
              action="open_view_sd_tree"
              parent="hr_payroll.menu_hr_payroll_configuration"
              sequence="6"/>
</odoo>
