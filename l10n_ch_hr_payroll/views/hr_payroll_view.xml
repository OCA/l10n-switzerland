<openerp>
    <data>
        <record model="ir.ui.view" id="hr_payroll_form_l10n_ch_inherit">
            <field name="name">hr.payroll.form.inherit_ch_01</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="priority" eval="20"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Salary elements">
                        <separator string="Reimbursements"/>
                        <field name="reimbursements"/>
                        <separator string="Commissions"/>
                        <field name="commissions"/>
                   </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
