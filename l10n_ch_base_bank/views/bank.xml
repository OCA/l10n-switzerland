<odoo>
    <record id="res_bank_view_search" model="ir.ui.view">
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.res_bank_view_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="code" />
                <field name="street" />
                <field name="city" />
            </field>
            <filter name="inactive" position="after">
                <filter
                    name="postfinance"
                    string="PostFinance"
                    domain="[('bic', '=', 'POFICHBEXXX')]"
                    help="PostFinance"
                />
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_bank_form">
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form" />
        <field name="arch" type="xml">
            <field name="bic" position="after">
                <field name="code" />
                <field name="clearing" />
            </field>
            <field name="name" position="after">
                <field name="country_code" invisible="True" />
            </field>
            <field name="city" position="attributes">
                <attribute
                    name="attrs"
                >{'required': [('country_code', '=', 'CH')]}</attribute>
            </field>
            <field name="bic" position="attributes">
                <attribute
                    name="attrs"
                >{'required': [('country_code', '=', 'CH')]}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_bank_tree">
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_tree" />
        <field name="arch" type="xml">
            <field name="bic" position="after">
                <field name="code" />
                <field name="clearing" />
                <field name="street" />
                <field name="city" />
            </field>
        </field>
    </record>

</odoo>
