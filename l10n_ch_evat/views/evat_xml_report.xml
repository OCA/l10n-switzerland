<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="evat_xml_report_tree_view" model="ir.ui.view">
        <field name="name">Evat XML Report Tree View</field>
        <field name="model">evat.xml.report</field>
        <field name="arch" type="xml">
            <tree string="E-VAT XML Reports">
                <field name="name" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="target_moves" />
                <field name="type_of_submission" />
                <field name="company_id" group="base.group_multi_company"/>
                <field name="generation_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="evat_xml_report_form_view" model="ir.ui.view">
        <field name="name">Evat XML Report Form View</field>
        <field name="model">evat.xml.report</field>
        <field name="arch" type="xml">
            <form string="E-VAT XML Reports">
                <header>
                    <button name="generate_xml_report" states="draft" string="Generate XML Report" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'generated')]}"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="date_from" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                            <field name="date_to" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                            <field name="type_of_submission" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                            <field name="target_moves" widget="radio" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                            <field name="company_id" group="base.group_multi_company" attrs="{'readonly': [('state', '=', 'generated')]}"/>
                        </group>
                        <group>
                            <field name="generation_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="evat_xml_report_action" model="ir.actions.act_window">
        <field name="name">E-VAT XML Reports</field>
        <field name="res_model">evat.xml.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create your first E-VAT XML Report.
            </p>
        </field>
    </record>

    <menuitem
        id="evat_xml_report_menu"
        name="E-VAT XML Reports"
        parent="l10n_ch.account_reports_ch_statements_menu"
        groups="account.group_account_user"
        action="evat_xml_report_action"
        sequence="15" />

</odoo>
